<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ProControlsDemo.ViewModels"
             xmlns:c="clr-namespace:WalletWasabi.Fluent.Controls"
             xmlns:converters="clr-namespace:WalletWasabi.Fluent.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProControlsDemo.Views.History.Columns.OutgoingColumnView"
             x:DataType="viewModels:HistoryItemViewModelBase" x:CompileBindings="True">
    <Panel Name="Panel" HorizontalAlignment="Stretch">
        <c:PrivacyContentControl
            HorizontalAlignment="Center"
            IsVisible="{Binding !!OutgoingAmount}"
            Content="{Binding OutgoingAmount, Converter={x:Static converters:MoneyConverters.ToFormattedString}}"
            Classes="monoSpaced"
            FontSize="15"
            NumberOfPrivacyChars="9" />
    </Panel>
</UserControl>

