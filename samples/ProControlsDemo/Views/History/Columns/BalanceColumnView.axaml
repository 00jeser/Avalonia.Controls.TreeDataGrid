<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ProControlsDemo.ViewModels"
             xmlns:c="clr-namespace:WalletWasabi.Fluent.Controls"
             xmlns:converters="clr-namespace:WalletWasabi.Fluent.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProControlsDemo.Views.History.Columns.BalanceColumnView"
             x:DataType="viewModels:HistoryItemViewModelBase" x:CompileBindings="True">
    <c:PrivacyContentControl x:DataType="viewModels:HistoryItemViewModelBase"
                             Content="{Binding Balance, Converter={x:Static converters:MoneyConverters.ToFormattedString}}"
                             Classes="monoSpaced"
                             FontSize="15"
                             NumberOfPrivacyChars="9"
                             HorizontalAlignment="Center"
                             Margin="10, 0, 30, 0" />
</UserControl>

